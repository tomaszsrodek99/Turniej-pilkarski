@model TournamentTreeViewModel

@using Football.Models;
<div class="tournament-tree">
    <div class="column">
        @{
            int availableMatchesInQuarterFinal = Model.QuarterFinalMatches.Count;

            for (int i = 0; i < 4; i++)
            {
                if (i < availableMatchesInQuarterFinal)
                {
                    var match = Model.QuarterFinalMatches[i];
                    <div class="level">
                        <div class="match">
                            <div class="team-container">
                                <div class="team">@match.HomeId</div>
                            </div>
                            <div class="score">@match.HomeGoals - @match.VisitorGoals</div>
                            <div class="team-container">
                                <div class="team">@match.VisitorId</div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="level">
                        <div class="match">
                            <div class="team-container">
                                <div class="team">Drużyna A</div>
                            </div>
                            <div class="score">WYNIK</div>
                            <div class="team-container">
                                <div class="team">Drużyna B</div>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>


    <div class="column">
        @{
            int totalMatchesInSemiFinal = 2;
            int availableMatchesInSemiFinal = Model.SemiFinalMatches.Count;

            for (int i = 0; i < totalMatchesInSemiFinal; i++)
            {
                if (i < availableMatchesInSemiFinal)
                {
                    var match = Model.SemiFinalMatches[i];
                    <div class="level">
                        <div class="match">
                            <div class="team">@match.HomeId</div>
                            <div class="score">@match.HomeGoals - @match.VisitorGoals</div>
                            <div class="team">@match.VisitorId</div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="level">
                        <div class="match">
                            <div class="team">Drużyna A</div>
                            <div class="score">WYNIK</div>
                            <div class="team">Drużyna B</div>
                        </div>
                    </div>
                }
            }
        }
    </div>


    <div class="column">
        @if (Model.FinalMatch == null)
        {
            <div class="level">
                <div class="match">
                    <div class="team">Mecz 5</div>
                    <div class="result">WYNIK</div>
                    <div class="team">Mecz 6</div>
                </div>
            </div>
        }
        else
        {
            <div class="level">
                <div class="match">
                    <div class="team">@Model.FinalMatch.HomeId</div>
                    <div class="result">@Model.FinalMatch.HomeGoals - @Model.FinalMatch.VisitorGoals</div>
                    <div class="team">@Model.FinalMatch.VisitorId</div>
                </div>
            </div>
        }
    </div>
</div>




